#!/usr/bin/env sh

# General purpose program compiler and runner
# by David Oniani <onianidavid@gmail.com>
# License: MIT License

BIBFILE="$HOME/git/dot/.local/share/templates/tex/ref.bib"
SEL=$(grep "@" "$BIBFILE" | cut -d '{' -f 2 | cut -d ',' -f 1 | fzf)
RES=$(sed -n "/$SEL,/,/^}/p" "$BIBFILE")
printf "%s\n" "$RES"
printf "%s" "$RES" | xclip -sel clipboard
