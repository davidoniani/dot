#!/usr/bin/env sh

# Wallpaper utility
# by David Oniani <onianidavid@gmail.com>
# License: MIT License

# Set a particular wallpaper
[ -f "$1" ] && gsettings set org.gnome.desktop.background picture-uri "file://$1" && wal -n -i "$1"

# Set a random wallpaper from the directory
[ -d "$1" ] && wp="$(find "$1" -type f | shuf -n 1)" && \
    gsettings set org.gnome.desktop.background picture-uri "file://$wp" && wal -n -i "$wp"
