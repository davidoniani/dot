#!/usr/bin/env sh

# General purpose formatter and fixer
# by David Oniani <onianidavid@gmail.com>
# License: GNU GPLv3

file="$1"

case $file in
    *.css | *.html | *.js | *.md) prettier --write --print-width=79 "$file";;
    *.py) black --line-length=79 --quiet;;
    *.r) styler;;
    *.rs) rustfmt;;
    *) printf "Unknown file format\n";;
esac
