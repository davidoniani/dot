# General Settings {{{

# Font for window titles. Will also be used by the bar unless a different font is used in the bar {}
# block below.
font pango:JetBrainsMono Nerd Font Mono 12

# Removes title bar in tiling and floating modes
default_border pixel 1
default_floating_border pixel 1

# NetworkManager is the most popular way to manage wireless networks on Linux, and nm-applet is a
# desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Adjusts PulseAudio volume via pactl.
set $refresh_i3blocks pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3blocks

# Disables laptop monitor
exec --no-startup-id xrandr --output eDP-1-1 --off

# Keeps the monitor active even after inactivity.
exec --no-startup-id xset dpms 0 0 0
exec --no-startup-id xset -dpms
exec --no-startup-id xset s off

# Set the wallpaper
exec --no-startup-id nitrogen --restore

# Launch picom compositor
exec_always picom --no-startup-id --config ~/.config/picom/picom.conf

# }}}

# Default Mappings {{{

# Set the mod key
# set $mod Mod1
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move the focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Toggle split layout
bindsym $mod+Shift+c layout toggle split

# Toggle vertical/horizontal split
bindsym $mod+Shift+v split toggle

# Enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# Switch to the urgent workspace
bindsym $mod+u [urgent=latest] focus

# Toggle tiling / floating
bindsym $mod+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# Kill focused window
bindsym $mod+Shift+q kill

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# }}}

# Workspaces {{{

# Workspaces
set $ws1 "1: dev "
set $ws2 "2: web "
set $ws3 "3: email "
set $ws4 "4: chat "
set $ws5 "5: music "
set $ws6 "6: other "
set $ws7 "7: other "
set $ws8 "8: other "
set $ws9 "9: other "
set $ws0 "10: other "

# Switch to a workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws0

# Move focused container to a workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws0

# }}}

# Resizing {{{

# Resize window (can also use the mouse for this)
mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# }}}

# Program Mappings {{{

# Start a web browser
bindsym $mod+w exec brave-browser --force-device-scale-factor=1.75

# Start a program launcher
bindsym $mod+Tab exec rofi -show window
bindsym $mod+f exec "rofi -modi drun,run -show drun"

# Take a screenshot
bindsym --release $mod+s exec --no-startup-id flameshot gui --path ~/screenshots
bindsym --release $mod+Shift+s exec --no-startup-id flameshot full --path ~/screenshots

# }}}

# i3bar {{{

bar {
    position top
    status_command ~/.local/share/cargo/bin/i3status-rs
    colors {
        focused_workspace #5ea3db #5ea3db #000000
        active_workspace #333333 #333333 #bab8b8
        inactive_workspace #333333 #333333 #bab8b8
        urgent_workspace #ff4444 #ff4444 #000000
    }
}

# }}}

# Gaps {{{

gaps inner 8
gaps outer 8

# }}}
