#!/usr/bin/env sh

# General purpose formatter and fixer
# by David Oniani <onianidavid@gmail.com>
# License: MIT License

FILE="$1"

case $FILE in
    *\.css | *\.html | *\.md) prettier --write --print-width=79 $FILE;;
    *\.js | *\.json) prettier --write --print-width=79 --tab-width=4 $FILE;;
    *\.go) gofmt -s -w "$FILE";;
    *\.py) black --line-length=79 $FILE;;
    *\.r) styler $FILE;;
    *\.rs) rustfmt $FILE;;
    *) printf "Unknown file format\n";;
esac
