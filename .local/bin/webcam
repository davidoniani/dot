#!/usr/bin/env sh

# Logitech C920 configuration
# by David Oniani <onianidavid@gmail.com>
# MIT License

device=$(v4l2-ctl --list-devices | grep -A1 "C920" | grep -o "/dev/video.")
v4l2-ctl -d "$device" --set-ctrl=auto_exposure=1 \
                      --set-ctrl=white_balance_automatic=0 \
                      --set-ctrl=exposure_time_absolute=300 \
                      --set-ctrl=saturation=128 \
                      --set-ctrl=contrast=128 \
                      --set-ctrl=sharpness=128 \
                      --set-ctrl=white_balance_temperature=3400 \
                      --set-ctrl=focus_automatic_continuous=0 \
                      --set-ctrl=focus_absolute=35
