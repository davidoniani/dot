#!/usr/bin/env sh

# A simple todo app
# by David Oniani <onianidavid@gmail.com>
# MIT License

help() {
    printf "usage: todo [option]\n\
    -e  edit entries\n\
    -l  list entries\n"
}

case $1 in
-e) $EDITOR "$HOME"/.local/share/todo.txt ;;
-l | "") cat -n "$HOME"/.local/share/todo.txt ;;
*) help ;;
esac
