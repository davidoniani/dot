#!/usr/bin/env sh

# Note opener
# by David Oniani <onianidavid@gmail.com>
# License: MIT License

selection=$(fd . "$HOME/git/note" --hidden --type f --exclude .git | fzf --prompt "Note> ")
[ -z "$selection" ] && exit 1
pandoc -V fontsize=11pt -V geometry:margin=1in -V linkcolor:blue -f markdown -t pdf "$selection" |
    zathura -
