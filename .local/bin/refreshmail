#!/usr/bin/env sh

# Synchronize mail using mbsync
# by David Oniani <onianidavid@gmail.com>
# License: MIT

# Check for internet connection
ping -q -c 1 8.8.8.8 >/dev/null || { printf "No internet\n" ; exit ; }

# Check if mbsync already running
pgrep -x mbsync >/dev/null && { printf "mbsync already running\n" ; exit ; }

# Synchronize
mbsync -a -q -c "${XDG_CONFIG_HOME:-$HOME/.config}/isync/mbsyncrc"
