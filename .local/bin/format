#!/usr/bin/env sh

# General purpose formater and fixer
# by David Oniani <onianidavid@gmail.com>
# License: GNU GPLv3

filename="$1"

case $filename in
  *.css | *.html | *.js | *.md) prettier --print-width=79 "$filename";;
  *.py) black --line-length=79 --quiet -;;
  *.r) styler;;
  *.rs) rustfmt;;
  *) printf "Unknown file format\n";;
esac
