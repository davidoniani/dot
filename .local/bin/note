#!/usr/bin/env sh

# Note utility
# by David Oniani <onianidavid@gmail.com>
# MIT License

cmd() {
    fd . "$1" --hidden --type f --exclude .git --exclude _index.md
}

prompt() {
    cmd "$1" | fzf --prompt "Note> "
}

pandocmd() {
    selection=$(prompt "$1")
    [ -z "$selection" ] && exit 0
    pandoc -V fontsize=11pt \
           -V geometry:margin=1in \
           -V linkcolor:blue \
           -f markdown \
           -t pdf "$selection" |
               zathura -
}

help() {
    printf "usage: note [option]\n\
    a  add a note\n\
    f  find a note\n\
    l  list all notes\n\
    o  open a note\n"
}

notedir="$HOME/git/oniani.github.io/content/notes"
case $1 in
    a) printf "Note: " && read -r name && "$EDITOR" "$notedir/$name.md";;
    f) pandocmd "$notedir";;
    l) cmd "$notedir";;
    o) "$EDITOR" "$(prompt "$notedir")";;
    *) help;;
esac
