#!/usr/bin/env sh

# General purpose formatter and fixer
# by David Oniani <onianidavid@gmail.com>
# License: MIT License

FILE=$1
case $FILE in
    *\.css | *\.html | *\.js | *\.json | *\.md) prettier --write "$FILE";;
    *\.go) gofmt -s -w "$FILE";;
    *\.py) black "$FILE";;
    *\.rs) rustfmt "$FILE";;
    *) printf "Unknown file format\n";;
esac
