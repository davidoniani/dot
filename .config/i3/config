# General Settings {{{

# Font for window titles. Will also be used by the bar unless a different font is used in the bar {}
# block below.
font pango:JetBrainsMono Nerd Font Mono 12

# Removes title bar in tiling and floating modes
default_border pixel 4
default_floating_border pixel 4
client.focused #44eda8 #44eda8 #44eda8 #44eda8 #44eda8

# NetworkManager is the most popular way to manage wireless networks on Linux, and nm-applet is a
# desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Adjusts PulseAudio volume via pactl.
set $refresh_i3blocks pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3blocks
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3blocks
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3blocks

# Disables laptop monitor
exec --no-startup-id xrandr --output eDP-1-1 --off

# Keeps the monitor active even after inactivity.
exec --no-startup-id xset dpms 0 0 0
exec --no-startup-id xset -dpms
exec --no-startup-id xset s off

# Set the wallpaper
exec_always --no-startup-id nitrogen --restore

# Decreases key repeat delay to 300ms and increases key repeat rate to 50 per second
exec_always --no-startup-id xset r rate 300 50

# Launch picom compositor
exec_always --no-startup-id picom --config $HOME/.config/picom/picom.conf

# Switching keyboard layouts
exec_always "setxkbmap -option 'grp:alt_shift_toggle' -layout us,ge,ru -variant ,qwerty,phonetic"

# Fixes lag and disables autofocus for Logitech C920 Linux Driver
exec_always "v4l2-ctl -d /dev/video0 --set-ctrl=exposure_auto=1"
exec_always "v4l2-ctl -d /dev/video0 --set-ctrl=focus_absolute=0"
exec_always "v4l2-ctl -d /dev/video0 --set-ctrl=focus_auto=0"

# Audio and mic
exec_always --no-startup-id "pactl set-default-sink 'alsa_output.pci-0000_00_1f.3.analog-stereo'"
exec_always --no-startup-id "pactl set-default-source 'alsa_input.usb-Samson_Technologies_Samson_Q2U_Microphone-00.analog-stereo'"
exec_always --no-startup-id "alsactl restore"

# Notification daemon
exec_always --no-startup-id dunst -config $HOME/.config/dunst/dunstrc

# }}}

# Default Mappings {{{

# Set the mod key
# set $mod Mod1
set $mod Mod4

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move the focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Toggle split layout
bindsym $mod+Shift+c layout toggle split

# Toggle vertical/horizontal split
bindsym $mod+Shift+v split toggle

# Enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# Toggle tiling / floating
bindsym $mod+space floating toggle

# Change focus between tiling / floating windows
bindsym $mod+Shift+space focus mode_toggle

# Kill focused window
bindsym $mod+Shift+q kill

# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Start a terminal
bindsym $mod+Return exec $HOME/.local/kitty.app/bin/kitty

# }}}

# Workspaces {{{

# Workspaces
set $ws1 "1: dev "
set $ws2 "2: web "
set $ws3 "3: chat "
set $ws4 "4: music "
set $ws5 "5: other "
set $ws6 "6: other "
set $ws7 "7: other "
set $ws8 "8: other "
set $ws9 "9: other "
set $ws0 "10: other "

# Switch to a workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws0

# Move focused container to a workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws0

# Switch to the urgent workspace
bindsym $mod+u [urgent=latest] focus

# }}}

# Resizing {{{

mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# }}}

# Program Mappings {{{

bindsym $mod+w exec brave-browser --force-device-scale-factor=1.25

bindsym $mod+Tab exec rofi -show window
bindsym $mod+f exec "rofi -modi drun,run -show drun"

bindsym --release $mod+Shift+a exec --no-startup-id flameshot gui -p $HOME/pic/screenshots
bindsym --release $mod+Shift+s exec --no-startup-id flameshot full -p $HOME/pic/screenshots

#bindsym $mod+a exec --no-startup-id $HOME/.local/bin/bookmark -a
bindsym $mod+s exec --no-startup-id $HOME/.local/bin/bookmark -s

# }}}

# i3bar {{{

bar {
    position top
    status_command $HOME/.local/share/cargo/bin/i3status-rs
    strip_workspace_numbers yes
    colors {
        focused_workspace #ffffff #ffffff #000000
        active_workspace #ffffff #ffffff #000000
        inactive_workspace #000000 #000000 #ffffff
        urgent_workspace #ff4444 #ff4444 #000000
    }
}

# }}}

# Gaps {{{

gaps inner 16
gaps outer 16

# }}}
